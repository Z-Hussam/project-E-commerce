
{% extends 'base.html.twig' %}

{% block title %}Détail de la commande N°{{ order.id }}{% endblock %}

{% block body %}
    <div class="container my-5 py-3">
        
        <div class="text-center mb-5">
            <h1 class="fw-bolder text-dark">Espace Membre</h1>
            <p class="lead text-muted">Détails de votre commande N°{{ order.id }}</p>
        </div>

        <div class="row g-4">
            
            <div class="col-12 col-lg-3">
                {% include "account/menu.html.twig" %}
            </div>
            
            <div class="col-12 col-lg-9">
                <div class="card p-4 p-md-5 rounded-4 shadow-sm">
                    
                    <h4 class="fw-bold mb-3 text-secondary border-bottom pb-2">
                        <i class="bi bi-receipt-cutoff me-2"></i> Commande N°{{ order.id }}
                    </h4>

                    <div class="d-flex justify-content-between flex-wrap align-items-center mb-3">
                        <span class="text-muted small">
                            Passée le: <span class="fw-semibold text-dark">{{ order.createdAt|date("d/m/Y à H:i") }}</span>
                        </span>
                        
                        <div class="mt-2 mt-sm-0">
                           {{ include('admin/state.html.twig',{field: {'value':order.state}  }) }}
                        </div>
                    </div>
                    
                    <div class="mb-4">
                         <a href="{{ path('app_invoice_customer', {id_order: order.id}) }}" 
                           class="btn btn-outline-secondary btn-sm fw-bold" 
                           target="_blank">
                            <i class="bi bi-cloud-arrow-down-fill me-2"></i> Télécharger ma facture
                        </a>
                    </div>
                    
                    <hr class="mb-4">

                    <div class="row g-4 mb-5">
                        <div class="col-12 col-md-6">
                            <h6 class="fw-bold text-dark mb-2"><i class="bi bi-geo-alt-fill me-2 text-secondary"></i> Adresse de livraison</h6>
                            <div class="p-3 border rounded bg-light small">
                                {{ order.delivery|raw }}
                            </div>
                        </div>
                        <div class="col-12 col-md-6">
                            <h6 class="fw-bold text-dark mb-2"><i class="bi bi-truck-flatbed me-2 text-secondary"></i> Transporteur</h6>
                            <div class="p-3 border rounded bg-light small">
                                <strong>Nom:</strong> {{ order.carrierName }}<br>
                                <strong>Frais:</strong> {{ order.carrierPrice|price }}
                            </div>
                        </div>
                    </div>

                    <h5 class="fw-bold mb-3 text-dark border-bottom pb-2">Contenu de la commande</h5>

                    <div class="table-responsive mb-5">
                        <table class="table table-hover table-striped">
                            <thead class="table-primary">
                                <tr>
                                    <th scope="col" class="col-1"></th>
                                    <th scope="col" class="col-5">Produit</th>
                                    <th scope="col" class="col-1 text-center">Qté</th>
                                    <th scope="col" class="col-1 text-end">Prix U. HT</th>
                                    <th scope="col" class="col-1 text-center">TVA</th>
                                    <th scope="col" class="col-2 text-end">Total TTC</th>
                                    {% if order.state == 6 %}
                                        <th scope="col" class='col-1 text-center'>Avis</th>
                                    {% endif %}
                                </tr>
                            </thead>
                            <tbody>
                                {% for product in order.orederDetails %}
                                    {% set coeff = 1 + (product.productTva / 100 ) %}
                                    {% set total_ttc = (product.productPrice * coeff) * product.productQuantity %}
                                    
                                    <tr>
                                        <td>
                                            <img src="/uploads/{{ product.productIllustration }}" 
                                                 alt="{{ product.productName }}" 
                                                 class="img-fluid rounded" 
                                                 width="50" height="50">
                                        </td>
                                        <td>{{ product.productName }}</td>
                                        <td class="text-center">{{ product.productQuantity }}</td>
                                        <td class="text-end">{{ product.productPrice|price }}</td>
                                        <td class="text-center">{{ product.productTva }}%</td>
                                        <td class="text-end fw-bold">{{ total_ttc|price }}</td>
                                        
                                        {% if order.state == 6 %}
                                            <td class="text-center">
                                                <a href="{{ path('app_comments', {productId: product.productIdentifier})}}" 
                                                   class="btn btn-sm btn-outline-info">
                                                    <i class="bi bi-chat-text me-1"></i> Noter
                                                </a>
                                            </td>
                                        {% endif %}
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    
                    <div class="row justify-content-end">
                        <div class="col-12 col-md-6 col-lg-5">
                            <div class="p-3 border rounded bg-light">
                                <h6 class="fw-bold mb-3 border-bottom pb-2">Récapitulatif Financier</h6>
                                
                                <div class="d-flex justify-content-between small">
                                    <span>Sous-Total HT :</span>
                                    <span>{{ (order.totalWt - order.totalTva - order.carrierPrice + (order.carrierPrice / 1.2))|price }}</span>
                                </div>
                                <div class="d-flex justify-content-between small">
                                    <span>Total TVA :</span>
                                    <span>{{ order.totalTva|price }}</span>
                                </div>
                                <div class="d-flex justify-content-between small">
                                    <span>Frais de livraison :</span>
                                    <span>{{ order.carrierPrice|price }}</span>
                                </div>
                                
                                <hr class="my-2">
                                
                                <div class="d-flex justify-content-between fw-bolder fs-5 text-secondary">
                                    <span>Total TTC :</span>
                                    <span>{{ order.totalWt|price }}</span>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
{% endblock %}