
{% extends 'base.html.twig' %}

{% block title %}Ma liste de souhaits{% endblock %}

{% block body %}
    <div class="container my-5 py-3">

        <div class="text-center mb-5">
            <h1 class="fw-bolder text-dark">Espace Membre</h1>
            <p class="lead text-muted">Gérez les produits que vous souhaitez acquérir.</p>
        </div>

        <div class="row g-4">
            
            <div class="col-12 col-lg-3">
                {# Inclut le menu de compte #}
                {% include "/account/menu.html.twig" %}
            </div>
            
            <div class="col-12 col-lg-9">
                <div class=" p-4 rounded-4 shadow-sm">
                    
                    <h4 class="fw-bold mb-4 text-dark border-bottom pb-3">
                        <i class="bi bi-heart-fill me-2 text-danger-emphasis"></i> 
                        Ma liste de souhaits 
                        <span class="badge bg-secondary-subtle text-dark fw-normal ms-2">{{ app.user.wishlists|length }}</span>
                    </h4>

                    {% if app.user.wishlists|length > 0 %}
                        <div class="row g-4">
                            {% for product in app.user.wishlists %}
                                <div class="col-6 col-sm-4 col-md-3 col-xl-3">
                                    <div class="card h-100 border-0 shadow-sm rounded-4 text-center"> 
                                        
                                        <a href="{{ path('app_account_wish_list_remove', { id: product.id }) }}" 
                                           class="text-danger position-absolute top-0 end-0 p-2 me-2 fs-5" 
                                           style="z-index: 10;" 
                                           data-bs-toggle="tooltip" data-bs-placement="top" title="Retirer de la liste">
                                            <i class="bi bi-heart-fill text-danger-emphasis "></i>
                                        </a>


                                        <a href="{{ path('app_product', { slug: product.slug }) }}" class="text-decoration-none">
                                            <div class="p-3 d-flex justify-content-center">
                                                <img src="/uploads/{{ product.illustration }}" 
                                                     class="img-fluid rounded-3" 
                                                     style="height: 180px; width: 100%; object-fit: cover;" 
                                                     alt="{{product.name}}"/>
                                            </div>
                                        </a>

                                        <div class="card-body pt-0 pb-3">
                                            <h6 class="fw-semibold text-dark text-truncate">{{ product.name }}</h6>
                                            <span class="fw-bold text-primary-emphasis fs-6 d-block mb-3">
                                                {{ product.priceWt|price }}
                                            </span>
                                            

                                            <a href="{{ path('app_cart_add', { id: product.id }) }}" 
                                               class="btn btn-sm  fw-bold" 
                                               data-bs-toggle="tooltip" data-bs-placement="top" title="Ajouter au panier">
								
                                            <i data-feather="shopping-bag"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>

                    {% else %}
                        <div class="alert alert-secondary text-center p-4 my-3 rounded-3" role="alert">
                            <h5 class="alert-heading fw-bold"><i class="bi bi-info-circle-fill me-2"></i> Votre liste de souhaits est vide.</h5>
                            <p class="mb-0">
                                Parcourez nos produits et cliquez sur le cœur pour ajouter des articles.
                            </p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}