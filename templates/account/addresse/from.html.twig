
{% extends "base.html.twig" %}

{% block title %}Mes adresses | GÃ©rer{% endblock %}

{% block body %}
    <div class="container my-5 py-3">
        
        <div class="text-center mb-5">
            <h1 class="fw-bolder text-dark">Espace Membre</h1>
            <h5 class="lead text-muted">Gestion de vos adresses de livraison</h5>
        </div>

        <div class="row g-4">
            
            <div class="col-12 col-lg-3">
                {# Inclut le menu de compte #}
                {% include "/account/menu.html.twig" %}
            </div>
            
            <div class="col-12 col-lg-9">
                <div class=" p-4 p-md-5 ">
                    
                    <h4 class="fw-bold mb-4 text-secondary border-bottom pb-3">
                         Ajouter/Modifier une adresse
                    </h4>
                    
                    <p class="text-muted mb-4">
                        Veuillez renseigner toutes les informations requises ci-dessous.
                    </p>
                    
                    {{ form_start(form) }}
                        <div class="row g-4">
                            
                            <div class="col-12 col-md-6">
                                {{ form_row(form.firstname) }}
                            </div>
                            <div class="col-12 col-md-6">
                                {{ form_row(form.lastname) }}
                            </div>

                            <div class="col-12">
                                {{ form_row(form.addresse) }}
                            </div>
                            
                            <div class="col-12 col-md-4">
                                {{ form_row(form.postal) }}
                            </div>
                            <div class="col-12 col-md-4">
                                {{ form_row(form.city) }}
                            </div>
                            <div class="col-12 col-md-4">
                                {{ form_row(form.country) }}
                            </div>

                            <div class="col-12 col-md-6">
                                {{ form_row(form.phone) }}
                            </div>
                            
                            
                        </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}