
{% extends "base.html.twig" %}

{% block title %}Mes adresses enregistrées{% endblock %}

{% block body %}
    <div class="container my-5 py-3">

        <!-- Header -->
        <div class="text-center mb-5">
            <h1 class="fw-bolder text-dark">Espace Membre</h1>
            <h5 class="lead text-muted">Gestion de vos adresses de livraison</h5>
        </div>

        <div class="row g-4">
            
            <!-- Sidebar Menu -->
            <div class="col-12 col-lg-3">
                {# Inclut le menu du compte #}
                {% include "/account/menu.html.twig" %}
            </div>
            
            
            <div class="col-12 col-lg-9">
                
                
                <div class="d-flex justify-content-between align-items-center mb-4 pb-2 border-bottom">
                    <h4 class="fw-bold text-dark mb-0">
                        <i class="bi bi-geo-alt-fill me-2 text-primary"></i> Mes adresses
                    </h4>
                    
                    <a href="{{path('app_account_addresses_form')}}" class="btn btn-secondary fw-bold shadow-sm">
                        <i class="bi bi-plus-circle-fill me-2"></i> Ajouter une adresse
                    </a>
                </div>

                {% if app.user.addresses|length == 0 %}
                    
                    
                    <div class="alert alert-info text-center p-4 my-5 rounded-4" role="alert">
                        <h4 class="alert-heading"><i class="bi bi-info-circle-fill me-2"></i> Aucune adresse enregistrée</h4>
                        <p class="mb-0">Veuillez ajouter votre première adresse pour faciliter vos futures commandes.</p>
                    </div>

                {% else %}
                    
                    <div class="row g-4">
                        {% for addresse in app.user.addresses %}
                            <div class="col-12 col-sm-6 col-lg-4">
                                <div class="card h-100 rounded-4 shadow-sm border-0 bg-light">
                                    <div class="card-body p-4 text-center">
                                        
                                        <!-- nom -->
                                        <h5 class="fw-bold text-dark mb-2">
                                            {{ addresse.firstname }} {{ addresse.lastname }}
                                        </h5>
                                        
                                        <!-- Détails -->
                                        <address class="small text-muted mb-3">
                                            {{ addresse.addresse }}<br>
                                            {{ addresse.postal }} {{ addresse.city }}<br>
                                            {{ addresse.country }}<br>
                                            <i class="bi bi-telephone-fill me-1"></i> {{ addresse.phone }}
                                        </address>

                                        
                                        <div class="d-flex justify-content-center gap-3 border-top pt-3">
                                            <!-- Edit Button -->
                                            <a href="{{path('app_account_addresses_form', {id: addresse.id})}}" 
                                               class="text-primary text-decoration-none fw-medium" 
                                               aria-label="Modifier l'adresse">
                                                <i class="bi bi-pencil-square fs-5"></i> Modifier
                                            </a>
                                            
                                            <!-- Delete Button -->
                                            <a href="{{path('app_account_addresse_delete', {id: addresse.id})}}" 
                                               class="text-danger text-decoration-none fw-medium" 
                                               aria-label="Supprimer l'adresse">
                                                <i class="bi bi-trash-fill fs-5"></i> Supprimer
                                            </a>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}